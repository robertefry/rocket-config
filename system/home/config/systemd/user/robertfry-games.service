[Unit]
Description=Mount robertfry-games.iso loopback from Titan Games
ConditionPathExists=/media/titan.saturn.local/games/robertfry-games.iso

[Service]
Type=oneshot
ExecStart=/home/robertfry/.config/systemd/user/robertfry-games.sh %h mount
ExecStop=/home/robertfry/.config/systemd/user/robertfry-games.sh %h umount
RemainAfterExit=yes
Restart=on-failure

[Install]
WantedBy=default.target
