
{
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",
    "window.zoomLevel": 1.0,

    "editor.fontSize": 15,
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "editor.bracketPairColorization.enabled": false,

    "editor.rulers": [80,100,120,128],
    "editor.wordWrapColumn": 100,
    "editor.wrappingStrategy": "simple",
    "editor.wordWrap": "wordWrapColumn",

    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.inlineSuggest.suppressSuggestions": true,

    "[tex][latex][bibtex]": {
        "editor.wordWrap": "on",
    },
    "[rust]": {
        "editor.wordWrapColumn": 120,
    },
    "[cmake]": {
        "editor.tabSize": 2,
    },

    "explorer.sortOrder": "default",
    "explorer.sortOrderLexicographicOptions": "unicode",

    "files.enableTrash": false,
    "files.associations": {
        "*.fwd": "cpp",
        "*.clang-tidy": "yaml",
        ".doxyfile": "shellscript",
        ".doxyfile-in": "shellscript"
    },

    "git.confirmSync": false,
    "git.suggestSmartCommit": false,

    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.graph.showRemoteNames": true,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,

    // https://open-vsx.org/vscode/item?itemName=rid9.datetime
    "dateTime.locale": "en-gb",
    "dateTime.customFormat": "HH:mm",

    "cody.commandCodeLenses": false,
    "cody.autocomplete.enabled": true,
    "cody.chat.defaultLocation": "editor",

    "sync.quietSync": true,
    "sync.removeExtensions": false,
    "sync.syncExtensions": true,

    "browser-preview.chromeExecutable": "/home/robertfry/.local/bin/chromium",
    "browser-preview.startUrl": "https://searx.robertfry.xyz",

    "platformio-ide.autoOpenPlatformIOIniFile": false,
    "platformio-ide.disablePIOHomeStartup": true,

    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //
    //  Language Settings
    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //

    // LLDB
    "lldb.library": "/usr/lib64/liblldb.so.19.1",

    // Zig
    "zig.zls.enabled": "on",
    "zig.zls.inlayHintsExcludeSingleArgument": false,
    "zig.zls.inlayHintsShowParameterName": false,
    "zig.zls.inlayHintsShowBuiltin": false,
    "zig.zls.inlayHintsShowStructLiteralFieldType": false,
    "zig.zls.inlayHintsShowVariableTypeHints": false,
    "zig.zls.warnStyle": true,
    "[zig]": {
        // I don't like Zig's default formatting rules, grrrr :[
        "editor.formatOnSave": false,
    },

    // CMake
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.automaticReconfigure": false,
    "cmake.buildDirectory": "${workspaceFolder}/.build",
    "cmake.showOptionsMovedNotification": false,

    // Clang-Tidy
    "clang-tidy.buildPath": "${workspaceFolder}/.build",

    // C/C++
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.autoAddFileAssociations": false,

    // Rust
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.renderColons": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.genericParameterHints.const.enable": false,
    "rust-analyzer.inlayHints.genericParameterHints.lifetime.enable": false,
    "rust-analyzer.inlayHints.genericParameterHints.type.enable": false,

    // LaTeX
    "latex-workshop.latex.outDir": ".build",
    "latex-workshop.intellisense.file.base": "both",
    "latex-workshop.docker.enabled": true,
    "latex-workshop.docker.image.latex": "texlive/texlive",

    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //
    //  Colour Customizations
    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //

    "workbench.colorCustomizations": {
        "editor.foreground": "#BDBDBD", // Material Gray 400
        "editor.background": "#212121", // Material Gray 900
        "editorRuler.foreground": "#323232", // Material Gray 850
        "editorIndentGuide.background1": "#424242", // Material Gray 800
        "editorIndentGuide.activeBackground1": "#757575", // Material Gray 600
    },
    "workbench.colorTheme": "FlatUI Dark",

    "editor.tokenColorCustomizations": {
        "comments": "#ff2E00", // Material Deep Orange A400 (g*=3/4)
    },

