
{
    "workbench.colorTheme": "FlatUI Dark",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#323232",
        "editor.background": "#222222",
    },

    "window.zoomLevel": 1,

    "editor.fontSize": 15,
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "editor.rulers": [80,100,120],
    "editor.bracketPairColorization.enabled": false,

    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,

    "explorer.sortOrder": "default",
    "explorer.sortOrderLexicographicOptions": "unicode",

    "editor.tokenColorCustomizations": {
        "comments": "#ff0000"
    },

    "files.enableTrash": false,
    "files.associations": {
        "*.fwd": "cpp",
        "*.clang-tidy": "yaml",
        ".doxyfile": "shellscript",
        ".doxyfile-in": "shellscript"
    },

    "[cmake]": {
        "editor.tabSize": 2,
    },
    "[tex,latex,bibtex]": {
        "editor.tabSize": 2,
        "editor.wordWrapColumn": 80,
    },
    "[xml,html]": {
        "editor.tabSize": 2,
    },
    "[php,html,css]": {
        "editor.tabSize": 2,
    },
    "[json]": {
        "editor.tabSize": 2,
    },

    "git.confirmSync": false,
    "git.suggestSmartCommit": false,

    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.graph.showRemoteNames": true,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.hovers.enabled": false,

    "sync.quietSync": true,
    "sync.removeExtensions": false,
    "sync.syncExtensions": true,

    "browser-preview.chromeExecutable": "/home/robertfry/.local/bin/chromium",
    "browser-preview.startUrl": "https://searx.robertfry.xyz",

    "platformio-ide.autoOpenPlatformIOIniFile": false,

    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //
    //  Language Specific Settings
    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //

    // CMake
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.buildDirectory": "${workspaceFolder}/.build",

    // Clang-Tidy
    "clang-tidy.buildPath": "${workspaceFolder}/.build",

    // C/C++
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.autoAddFileAssociations": false,

    // Rust
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.renderColons": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,

    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ //
    //  Spell-Check Dictionary Definitions
